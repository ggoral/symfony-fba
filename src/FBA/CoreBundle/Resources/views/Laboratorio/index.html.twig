{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Laboratorio list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Institucion</th>
                <th>Sector</th>
                <th>Responsable</th>
                <th>Domicilio</th>
                <th>Correspondencia</th>
                <th>Ciudad</th>
                <th>Pais</th>
                <th>Codigopostal</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Tipolaboratorio</th>
                <th>Empresa</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('laboratorio_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codigo }}</td>
                <td>{{ entity.institucion }}</td>
                <td>{{ entity.sector }}</td>
                <td>{{ entity.responsable }}</td>
                <td>{{ entity.domicilio }}</td>
                <td>{{ entity.correspondencia }}</td>
                <td>{{ entity.ciudad }}</td>
                <td>{{ entity.pais }}</td>
                <td>{{ entity.codigoPostal }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.tipoLaboratorio }}</td>
                <td>{{ entity.empresa }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('laboratorio_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('laboratorio_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('laboratorio_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
